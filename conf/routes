GET /                                controllers.RegistryController.root()
GET /v1/_ping                        controllers.RegistryController._ping()
GET /v1/repositories/*repo/images    controllers.RegistryController.getImages(repo)
PUT /v1/repositories/*repo/images    controllers.RegistryController.putImages(repo)
GET /v1/repositories/*repo/tags      controllers.RegistryController.getTags(repo)
PUT /v1/repositories/*repo/tags/:tag controllers.RegistryController.putTag(repo, tag)
PUT /v1/repositories/*repo/          controllers.RegistryController.putRepo(repo)
GET /v1/images/:image/json           controllers.RegistryController.getImageJson(image)
PUT /v1/images/:image/json           controllers.RegistryController.putImageJson(image)
GET /v1/images/:image/layer          controllers.RegistryController.getImageLayer(image)
PUT /v1/images/:image/layer          controllers.RegistryController.putImageLayer(image)
PUT /v1/images/:image/checksum       controllers.RegistryController.putImageChecksum(image)
GET /v1/images/:image/ancestry       controllers.RegistryController.getImageAncestry(image)
GET /v1/search                       controllers.RegistryController.search(q: String ?= "")

GET /api-docs.json                   controllers.ApiHelpController.getResources
GET /api-docs.json/registry          controllers.ApiHelpController.getResource(path="/registry")
